{
    "properties": {
        "displayName": "Ensure that 'Automatic provisioning of monitoring agent' is set to 'On'. CIS Control 2.2",
        "description": "Enable automatic provisioning of the monitoring agent to collect security data.",
        "mode": "All",
        "metadata": {
            "category": "CIS"
        },
        "parameters": {
            "effect": {
                "type": "String",
                "metadata": {
                    "displayName": "Effect",
                    "description": "Enable or disable the execution of the policy"
                },
                "allowedValues": [
                    "DeployIfNotExists",
                    "Disabled"
                ],
                "defaultValue": "DeployIfNotExists"
            }
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Resources/subscriptions"
                    }
                ]
            },
            "then": {
                "effect": "[parameters('effect')]",
                "details": {
                    "type": "Microsoft.Security/AutoProvisioningSettings",
                    "deploymentScope": "Subscription",
                    "existenceScope": "Subscription",
                    "roleDefinitionIds": [
                        "/providers/Microsoft.Authorization/roleDefinitions/8e3af657-a8ff-443c-a75c-2fe8c4bcb635"
                    ],
                    "existenceCondition": {
                        "field": "Microsoft.Security/AutoProvisioningSettings/autoProvision",
                        "equals": "On"
                    },
                    "deployment": {
                        "location": "westeurope",
                        "properties": {
                            "mode": "incremental",
                            "parameters": {},
                            "template": {
                                "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                                "contentVersion": "1.0.0.0",
                                "parameters": {},
                                "variables": {},
                                "resources": [
                                    {
                                        "type": "Microsoft.Security/autoProvisioningSettings",
                                        "apiVersion": "2017-08-01-preview",
                                        "name": "default",
                                        "properties": {
                                            "autoProvision": "On"
                                        }
                                    }
                                ],
                                "outputs": {}
                            }
                        }
                    }
                }
            }
        }
    }
}