{
    "properties": {
        "displayName": " Ensure the log profile captures activity logs for all regions including global 5.1.4",
        "description": "Configure the log profile to export activities from all Azure supported regions/locations including global.",
        "mode": "All",
        "metadata": {
            "category": "CIS"
        },
        "parameters": {
            "effect": {
                "type": "String",
                "metadata": {
                    "displayName": "Effect",
                    "description": "Enable or disable the execution of the policy"
                },
                "allowedValues": [
                    "AuditIfNotExists",
                    "Disabled"
                ],
                "defaultValue": "AuditIfNotExists"
            }
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Insights/logprofiles"
                    },
                    {
                        "field": "name",
                        "equals": "default"
                    }
                ]
            },
