{
    "properties": {
        "name": "6.3",
        "displayName": "Ensure no SQL Databases allow ingress 0.0.0.0/0 (ANY IP) 6.3.",
        "description": "Ensure that no SQL Databases allow ingress from 0.0.0.0/0 (ANY IP).",
        "mode": "All",
        "metadata": {
            "category": "CIS"
        },
        "parameters": {
            "effect": {
                "type": "String",
                "metadata": {
                    "displayName": "Effect",
                    "description": "Enable or disable the execution of the policy"
                },
                "allowedValues": [
                    "Audit",
                    "Disabled"
                ],
                "defaultValue": "Audit"
            }
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Sql/servers/firewallRules"
                    },
                    {
                        "field": "Microsoft.Sql/servers/firewallRules/startIpAddress",
                        "equals": "0.0.0.0"
                    }
                ]
            },
            "then": {
                "effect": "[parameters('effect')]"
            }
        }
    }
}