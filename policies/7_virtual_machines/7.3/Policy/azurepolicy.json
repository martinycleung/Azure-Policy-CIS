{
    "properties": {
        "displayName": "Ensure that only approved extensions are installed 7.3.",
        "description": "Ensure that unattached disks in a subscription are encrypted.",
        "mode": "All",
        "metadata": {
            "category": "CIS"
        },
        "parameters": {
            "effect": {
                "type": "String",
                "metadata": {
                    "displayName": "Effect",
                    "description": "Enable or disable the execution of the policy"
                },
                "allowedValues": [
                    "Audit",
                    "Disabled"
                ],
                "defaultValue": "Audit"
            }
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Compute/disks"
                    },
                    {
                        "field": "Microsoft.Compute/disks/diskState",
                        "equals": "Unattached"
                    },
                    {
                        "field": "Microsoft.Compute/disks/encryptionSettings.diskEncryptionKey",
                        "exists": false
                    }
                ]
            },
            "then": {
                "effect": "[parameters('effect')]"
            }
        }
    }
}