{
    "if": {
        "allOf": [
            {
                "field": "type",
                "equals": "Microsoft.Compute/disks"
            },
            {
                "field": "Microsoft.Compute/disks/diskState",
                "equals": "Unattached"
            },
            {
                "field": "Microsoft.Compute/disks/encryptionSettings.diskEncryptionKey",
                "exists": false
            }
        ]
    },
    "then": {
        "effect": "[parameters('effect')]"
    }
}